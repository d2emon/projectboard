html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(name="description", content="{{description}}")
    meta(name="author", content="{{author}}")
    meta(name="keyword", content="{{keywords}}")
    link(rel="shortcut icon", href="{% static 'images/favicon.png' %}")
    title
      block title
        | Projectboard #{title}
    // Icons
    link(href="{%static 'css/font-awesome.min.css' %}", rel="stylesheet")
    link(href="{%static 'css/simple-line-icons.css' %}", rel="stylesheet")

    // Main styles for this application
    link(href="{%static 'css/style.css' %}", rel="stylesheet")
    link(href="{%static 'css/index.css' %}", rel="stylesheet")

  //- 
    BODY options, add following classes to body to change options
    // Header options
    1. '.header-fixed'					- Fixed Header

    // Sidebar options
    1. '.sidebar-fixed'					- Fixed Sidebar
    2. '.sidebar-hidden'				- Hidden Sidebar
    3. '.sidebar-off-canvas'		- Off Canvas Sidebar
    4. '.sidebar-minimized'			- Minimized Sidebar (Only icons)

    // Aside options
    1. '.aside-menu-fixed'			- Fixed Aside Menu
    2. '.aside-menu-hidden'			- Hidden Aside Menu
    3. '.aside-menu-off-canvas'	- Off Canvas Aside Menu

    // Footer options
    1. '.footer-fixed'						- Fixed footer
  block body
    body(class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden")
      header(class="app-header navbar")
        block topmenu
          a(class="navbar-brand", href="#")

        block usermenu
        
      block feeds

      div(style="display:none;")
        block sidebar
  
      .app-body
        block sidemenu

        // Main content
        main.main
          block breadcrumbs_block
        
          .container-fluid
            block content
            
        block aside
        
      footer.app-footer
        a(href="http://coreui.io") CoreUI
        | © 2017 creativeLabs.
        span.float-right Powered by <a href="http://coreui.io">CoreUI</a>
    
      // Bootstrap and necessary plugins
      script(src="{% static 'js/jquery.min.js' %}")
      script(src="{% static 'js/tether.min.js' %}")
      script(src="{% static 'js/bootstrap.min.js' %}")
      script(src="{% static 'js/pace.min.js' %}")

      // Plugins and scripts required by all views
      script(src="{% static 'js/Chart.min.js' %}")

      // GenesisUI main scripts
      script(src="{% static 'js/index.js' %}")

      block jsblock
        // Plugins and scripts required by this views
        // Custom scripts required by this view
        script(src="{% static 'js/views/main.js' %}")

